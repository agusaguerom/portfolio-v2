---
interface Props {
  title: string;
  description: string;
  imageUrl: string;
  tags?: string[];
  projectUrl?: string; // El link principal "EXPLORAR"
  githubUrl?: string;  // Link a GitHub
  docsUrl?: string;    // Link a Documentación
}

const { title, description, imageUrl, tags = ["Tech", "Dev"], projectUrl, githubUrl, docsUrl } = Astro.props;
---

<div class="card-container">
  <div class="card-frame">
    <div class="glow-element"></div>
    
    <div class="card-inner">
      <div class="image-section">
        <img src={imageUrl} alt={title} />
        <div class="image-overlay"></div>
        <div class="tag-container">
          {tags.map(tag => <span class="tag">{tag}</span>)}
        </div>
      </div>

      <div class="content-section">
        <div class="decorator"></div>
        <h3>{title}</h3>
        <p>{description}</p>
        
        <div class="footer-action">
          <div class="social-links">
            {githubUrl && (
              <a href={githubUrl} target="_blank" title="GitHub Repo" class="icon-link">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"></path><path d="M9 18c-4.51 2-5-2-7-2"></path></svg>
              </a>
            )}
            {docsUrl && (
              <a href={docsUrl} target="_blank" title="Documentación" class="icon-link">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M2 3h6a4 4 0 0 1 4 4v14a4 4 0 0 0-4-4H2z"></path><path d="M22 3h-6a4 4 0 0 0-4 4v14a4 4 0 0 1 4-4h6z"></path></svg>
              </a>
            )}
          </div>

          <span class="line"></span>

          {projectUrl && (
            <a href={projectUrl} class="cybr-btn">
              EXPLORAR <span aria-hidden>_</span>
            </a>
          )}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .card-container {
    position: relative;
    padding: 1px; /* Espacio para el borde de luz */
    background: var(--border);
    border-radius: 12px;
    transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
    overflow: hidden;
  }

  .card-frame {
    position: relative;
    background: #0e0a0a; /* Fondo sólido para bloquear el resplandor */
    border-radius: 11px;
    height: 100%;
    z-index: 1;
  }

  /* El brillo que aparece en hover */
  .glow-element {
    position: absolute;
    inset: -20px;
    background: radial-gradient(circle at var(--mouse-x, 50%) var(--mouse-y, 50%), 
                var(--accent) 0%, 
                transparent 50%);
    opacity: 0;
    transition: opacity 0.5s;
    z-index: -1;
  }

  .card-container:hover .glow-element {
    opacity: 0.3;
  }

  .card-container:hover {
    transform: translateY(-8px) scale(1.01);
    background: var(--accent); /* El borde se ilumina */
    box-shadow: 0 10px 30px -10px rgba(232, 59, 59, 0.3);
  }

  .card-inner {
    display: flex;
    flex-direction: column;
    height: 100%;
    background: linear-gradient(145deg, rgba(255, 60, 60, 0.02) 0%, rgba(14, 10, 10, 1) 100%);
  }

  /* --- Sección Imagen --- */
  .image-section {
    position: relative;
    height: 200px;
    overflow: hidden;
  }

  .image-section img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: grayscale(0.5) contrast(1.2);
    transition: all 0.6s ease;
  }

  .card-container:hover img {
    filter: grayscale(0) contrast(1);
    transform: scale(1.1);
  }

  .image-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(0deg, #0e0a0a 0%, transparent 50%);
  }

  .tag-container {
    position: absolute;
    top: 15px;
    left: 15px;
    display: flex;
    gap: 8px;
  }

  .tag {
    background: rgba(14, 10, 10, 0.8);
    border: 1px solid var(--accent);
    color: var(--accent);
    font-size: 10px;
    padding: 2px 8px;
    text-transform: uppercase;
    letter-spacing: 1px;
    backdrop-filter: blur(4px);
  }

  /* --- Sección Contenido --- */
  .content-section {
    padding: 24px;
    position: relative;
  }

  .decorator {
    width: 30px;
    height: 2px;
    background: var(--accent);
    margin-bottom: 15px;
  }

  h3 {
    font-family: 'Inter', sans-serif;
    font-size: 20px;
    font-weight: 700;
    color: var(--text);
    margin: 0 0 12px 0;
    letter-spacing: -0.5px;
  }

  p {
    font-size: 14px;
    color: var(--muted);
    line-height: 1.6;
    margin: 0 0 24px 0;
  }

  /* --- Botón Estilo Cyber --- */
  .footer-action {
    display: flex;
    align-items: center;
    gap: 15px;
    margin-top: auto;
  }

  .line {
    flex-grow: 1;
    height: 1px;
    background: var(--border);
  }

  .cybr-btn {
    background: transparent;
    border: none;
    color: var(--accent);
    font-weight: 800;
    font-size: 12px;
    letter-spacing: 2px;
    cursor: pointer;
    padding: 10px;
    position: relative;
    transition: all 0.3s;
  }

  .cybr-btn:hover {
    color: var(--text);
    text-shadow: 0 0 8px var(--accent);
  }
  /* Ajuste para el contenedor de botones */
  .footer-action {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-top: auto;
  }

  .social-links {
    display: flex;
    gap: 10px;
    z-index: 10;
  }

  .icon-link {
    color: var(--muted);
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 5px;
    border: 1px solid transparent;
    border-radius: 4px;
  }

  .icon-link:hover {
    color: var(--accent);
    background: var(--surface);
    border-color: var(--border);
    transform: translateY(-2px);
    filter: drop-shadow(0 0 5px var(--accent));
  }

  /* El botón de Explorar ahora es un enlace <a> */
  .cybr-btn {
    text-decoration: none;
    /* ... (resto de tus estilos de .cybr-btn se mantienen igual) */
  }

  .line {
    flex-grow: 1;
    height: 1px;
    background: var(--border);
    opacity: 0.5;
  }
</style>

<script>
  // Script opcional para que el brillo siga al ratón
  document.querySelectorAll('.card-container').forEach(card => {
    card.addEventListener('mousemove', (e) => {
      const rect = card.getBoundingClientRect();
      const x = ((e.clientX - rect.left) / rect.width) * 100;
      const y = ((e.clientY - rect.top) / rect.height) * 100;
      card.style.setProperty('--mouse-x', `${x}%`);
      card.style.setProperty('--mouse-y', `${y}%`);
    });
  });
</script>
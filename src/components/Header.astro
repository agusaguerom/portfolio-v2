  <script>
  const observerOptions = {
    root: null,
    rootMargin: '-20% 0px -70% 0px', // Detecta la sección cuando está en la parte superior
    threshold: 0
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        // Buscamos todos los links
        const navLinks = document.querySelectorAll('.nav-links a');
        
        navLinks.forEach(link => {
          // Si el href del link coincide con el id de la sección visible
          link.classList.toggle('active', 
            link.getAttribute('href') === `#${entry.target.id}`
          );
        });
      }
    });
  }, observerOptions);

  // Observamos todas las secciones que tengan un ID
  document.querySelectorAll('section[id]').forEach(section => {
    observer.observe(section);
  });
</script>

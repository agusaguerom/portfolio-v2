---
import astroLogo from '../assets/astro.svg';
import background from '../assets/background.svg';
---


<section id="hero">
<div class="hero-left">
        <h1 class="hero-title">AGUSTIN AGÜERO</h1>
            <p class="hero-desc">
        Backend developer especializado en APIs robustas, arquitecturas escalables y sistemas que no fallan cuando más importa.
      </p>

        <div class="hero-actions">
        <a href="#proyectos" class="btn-primary">Ver proyectos →</a>
        <a href="#contacto" class="btn-ghost">Contacto</a>
      </div>
</div>
<div class="hero-right">

<div class="particles-container">
<div class="radar-bg"></div>

  <svg viewBox="0 0 500 500" filter="url(#cyberGlow)" preserveAspectRatio="xMidYMid meet">
    <defs>
      <linearGradient id="redGradient" x1="0%" y1="0%" x2="100%" y2="100%">
        <stop offset="0%" stop-color="var(--accent)" />
        <stop offset="100%" stop-color="#550000" />
      </linearGradient>
      
      <filter id="cyberGlow" x="-20%" y="-20%" width="140%" height="140%">
        <feGaussianBlur stdDeviation="8" result="blur" />
        <feComposite in="SourceGraphic" in2="blur" operator="over" />
      </filter>
    </defs>

    <g 
      stroke-width="2.5" 
      stroke="url(#redGradient)" 
      fill="var(--surface)" 
      stroke-linejoin="round"
    >
      <polygon class="path-main" points="250,50 423,150 423,350 250,450 77,350 77,150"></polygon>
      <polygon class="path-morph" style="opacity: 0" points="250,50 423,150 423,350 250,450 77,350 77,150"></polygon>
    </g>

    <circle cx="250" cy="250" r="10" fill="var(--accent)" class="core-dot" />
  </svg>
</div>
</div>


</div>
</section>

<script src="/src/components/js/Particles.js"></script>
<style>

      #hero {
      min-height: 100vh;
      padding-top: var(--nav-height);
      display: grid;
      grid-template-columns: 1fr 1fr;
      align-items: center;
      gap: 0;
      padding-inline: 80px;
      position: relative;
      overflow: hidden;
    }

    /* Fondo con grid de puntos sutil */
    #hero::before {
      content: '';
      position: absolute;
      inset: 0;
      background-image:
        radial-gradient(circle at 20% 50%, rgba(232, 59, 59, 0.07) 0%, transparent 50%),
        radial-gradient(circle at 80% 20%, rgba(232, 59, 59, 0.05) 0%, transparent 40%);
      pointer-events: none;
    }

    /* Grid punteado de fondo */
    #hero::after {
      content: '';
      position: absolute;
      inset: 0;
      background-image: radial-gradient(rgba(245, 220, 220, 0.07) 1px, transparent 1px);
      background-size: 32px 32px;
      pointer-events: none;
      mask-image: radial-gradient(ellipse 80% 80% at 50% 50%, black 40%, transparent 100%);
    }
    
   .hero-left {
      position: relative;
      z-index: 1;
      animation: heroFadeIn 0.9s cubic-bezier(0.16, 1, 0.3, 1) 0.2s both;
    }    
    
    .hero-title {
      font-family: var(--font-display);
      font-size: clamp(2.6rem, 4.5vw, 4.2rem);
      line-height: 1.08;
      letter-spacing: -0.03em;
      color: var(--text);
      margin-bottom: 20px;
    }

       .hero-desc {
      color: var(--muted);
      font-size: 1rem;
      line-height: 1.7;
      max-width: 420px;
      margin-bottom: 36px;
    }

        .hero-actions {
      display: flex;
      align-items: center;
      gap: 14px;
      flex-wrap: wrap;
    }

    .btn-primary {
      padding: 12px 26px;
      background: var(--accent);
      color: #fff;
      font-family: var(--font-body);
      font-size: 0.9rem;
      font-weight: 500;
      border-radius: 10px;
      text-decoration: none;
      transition: transform 0.2s cubic-bezier(0.34, 1.56, 0.64, 1), box-shadow 0.2s ease;
    }

    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 28px rgba(232, 59, 59, 0.38);
    }

    .btn-ghost {
      padding: 12px 24px;
      color: var(--muted);
      font-family: var(--font-body);
      font-size: 0.9rem;
      font-weight: 400;
      border-radius: 10px;
      border: 1px solid var(--border);
      text-decoration: none;
      transition: color 0.2s ease, background 0.2s ease, border-color 0.2s ease;
    }

    .btn-ghost:hover {
      color: var(--text);
      background: var(--surface);
      border-color: rgba(232, 59, 59, 0.3);
    }
.particles-container {
    width: 100%;
    height: 100%;
    min-height: 550px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  /* Fondo de radar decorativo */
  .radar-bg {
    position: absolute;
    width: 400px;
    height: 400px;
    border: 1px solid var(--border);
    border-radius: 50%;
    pointer-events: none;
    animation: ping 10s linear infinite;
  }

  .radar-bg::before {
    content: '';
    position: absolute;
    inset: 50px;
    border: 1px solid var(--border);
    border-radius: 50%;
    opacity: 0.5;
  }

  svg {
    width: 100%;
    height: 100%;
    max-width: 600px;
    overflow: visible;
    z-index: 2;
  }

  .core-dot {
    filter: drop-shadow(0 0 15px var(--accent));
    animation: blink 2s ease-in-out infinite;
  }

  @keyframes ping {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  @keyframes blink {
    0%, 100% { opacity: 0.4; }
    50% { opacity: 1; }
  }
    
        @media (max-width: 960px) {
              .hero {
        grid-template-columns: 1fr;
        padding-inline: 32px;
        padding-top: calc(var(--nav-height) + 48px);
        padding-bottom: 60px;
        gap: 48px;
        text-align: center;
      }
      .hero-desc { max-width: 100%; }
      .hero-actions { justify-content: center; }
      .hero-stack { justify-content: center; }
      .hero-right { order: -1; }
      .code-window { max-width: 460px; }
    }

</style>

